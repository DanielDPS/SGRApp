<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     >



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="4dp"
        android:orientation="horizontal"
        android:id="@+id/capa1"
         >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/capa"
            >



            <TextView
                android:layout_marginRight="138dp"
                android:paddingLeft="10dp"
                android:id="@+id/format_identifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorSecondaryText"
                android:textSize="14dp"
                 android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/format_section_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/format_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintLeft_toRightOf="@id/capa1"
                android:textStyle="bold"
                 app:layout_constraintTop_toBottomOf="@+id/format_identifier"
                android:textColor="@color/colorPrimaryLight"
                android:textAlignment="center"
                tools:ignore="NotSibling" />
            <View
                android:id="@+id/separator2"
                android:layout_width="5dp"
                android:layout_height="65dp"
                android:background="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="@+id/format_identifier"
                app:layout_constraintTop_toBottomOf="@+id/capa1"
                tools:ignore="NotSibling" />




            <com.google.android.material.chip.Chip
                android:id="@+id/format_data_pendiente"
                 android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:textSize="5dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                 android:textColor="@color/colorPrimaryText"
                app:chipBackgroundColor="@color/colorPrimaryLight"
                app:layout_constraintLeft_toLeftOf="@id/separator2"
                app:layout_constraintRight_toRightOf="parent"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />
            <com.google.android.material.chip.Chip
                android:id="@+id/format_data_finalizado"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                app:chipBackgroundColor="@color/colorProgressBarGreen"
                app:layout_constraintLeft_toLeftOf="@id/separator2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/format_data_pendiente"
                android:textSize="5dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="@color/colorPrimaryText"
                android:textAlignment="center"
                />


            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/format_description" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>






</layout>
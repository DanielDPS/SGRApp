<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/cap1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acta de visita"
            android:textStyle="bold"
            android:backgroundTint="@color/colorViewPdf"
            android:textColor="@color/colorPrimaryText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInspeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporte de inspeccion"
            android:textStyle="bold"
            android:backgroundTint="@color/colorViewPdf"
            android:textColor="@color/colorPrimaryText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archivo fotografico"
            android:textStyle="bold"
            android:backgroundTint="@color/colorViewPdf"
            android:textColor="@color/colorPrimaryText"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />

    </LinearLayout>

</RelativeLayout>